extends layout

block content
  div(class="flex flex-col items-center justify-center min-h-screen bg-gray-100")
    div(class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-6 text-center")
      img(src="https://mypicgogo.oss-cn-hangzhou.aliyuncs.com/tuchuang202402070012483.jpg" alt="Logo" class="mb-4 w-24 h-24 mx-auto")
      h1(class="text-2xl font-semibold text-gray-800 mb-4")= title
      p(class="text-gray-600 mb-6") Welcome #{name}
      a(href="/contacts" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Go to the contacts
