extends layout

block content
  div(class="flex items-center justify-center min-h-screen bg-gray-100")
    div(class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-6")
      h1(class="text-2xl font-semibold text-center text-gray-800 mb-4")= title
      p(class="text-center text-gray-600 mb-6") Welcome to #{title}
      div(class="flex justify-center mb-6")
        a(href='/contacts/add' class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Add a Contact
      hr(class="mb-6 border-t")
      if contacts.length > 0
        div(id="contacts-wrapper")
          ul(class="list-none space-y-3")
            each val in contacts
              li(class="border border-gray-200 rounded-lg p-4" data-contactid=val.id)
                a(href=`/contacts/${val.id}` class="text-blue-500 hover:text-blue-600")= val.firstName
