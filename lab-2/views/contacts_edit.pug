extends layout

block content
  h1= title
  p Use the form below to edit this contact.
  hr
  if msgs
    each msg in msgs
      p(class='redtext')= msg
  form(method='POST' action=`/contacts/${contact.id}/edit`)
    input(type='text' value=contact.firstName placeholder='input contact firstName' name='firstName' size=40)
    br
    br
    input(type='text' value=contact.lastName placeholder='input contact lastName' name='lastName' size=40)
    br
    br
    input(type='text' value=contact.emailAddress placeholder='input contact emailAddress(Optional)' name='emailAddress' size=40)
    br
    br
    input(type='text' value=contact.notes placeholder='input contact notes(Optional)' name='notes' size=40)
    br
    br

    button(type='submit') Save Changes
    br
    br
    a(href='/contacts') Cancel
