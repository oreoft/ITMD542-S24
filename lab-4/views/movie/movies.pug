extends ../layout

block content
    style.
        .truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    div(class="flex items-center justify-center min-h-screen bg-gray-100")
        div(class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-6")
            h1(class="text-2xl font-semibold text-center text-gray-800 mb-4")= title
            p(class="text-center text-gray-600 mb-6") Welcome to #{title}
            div(class="flex justify-center mb-6")
                a(href='/movies/add' class="inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Add a Movie
            hr(class="mb-6 border-t")
            if movies.length > 0
                div(id="movies-wrapper")
                    ul(class="list-none space-y-3")
                        each movie in movies
                            li(class="border border-gray-200 rounded-lg p-4")
                                a(href=`/movies/${movie.id}` class="block cursor-pointer")
                                    h2(class="text-lg font-semibold text-gray-800 truncate")= movie.title
                                    p(class="text-gray-600 truncate") Director: #{movie.director}
                                    p(class="text-gray-600") Year: #{movie.year}
                                    if movie.notes
                                        p(class="text-gray-600 truncate") Notes: #{movie.notes}
                                    else
                                        p(class="text-gray-600") Notes: N/A
            else
                p(class="text-center text-gray-600") No movies found. Please add some!

